doctype html
html(ng-app="crankcast")
  - var title = 'Index'
  include ./includes/head.jade
  
  body
    section#index(ng-controller="MainController as vm")
      article
        div
          h2 8:00am
          p {{ vm.forecast.am.temperature | number:0 }}&deg; / {{ vm.forecast.am.precipProbability }}%
          h3 {{ vm.forecast.am.summary }}
        div
          h1 Today
        div
          h2 5:00pm
          p {{ vm.forecast.pm.temperature | number:0 }}&deg; / {{ vm.forecast.pm.precipProbability }}%
          h3 {{ vm.forecast.pm.summary }}

    script(src="lib/angular/angular.js")
    script(src="lib/d3/d3.js")
    script(src="lib/moment/moment.js")
    script(src="scripts/app.js")
