doctype html
html(ng-app="crankcast")
  - var title = 'Index'
  include ./includes/head.jade
  
  body
    section#index(ng-controller="MainController as vm")
      article
        div
          h2 {{ vm.showTime(vm.am) }}
          p {{ vm.forecast.am.temperature | degrees }} / {{ vm.forecast.am.precipProbability | percent }}
          h3 {{ vm.forecast.am.summary }}

        div
          h1 {{ vm.showDate(vm.am) }}
       
        div
          h2 {{ vm.showTime(vm.pm) }}
          p {{ vm.forecast.pm.temperature | degrees }} / {{ vm.forecast.pm.precipProbability | percent }}
          h3 {{ vm.forecast.pm.summary }}

    script(src="lib/angular/angular.js")
    script(src="lib/d3/d3.js")
    script(src="lib/moment/moment.js")
    script(src="scripts/app.js")
